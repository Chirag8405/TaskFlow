{
  "name": "realtime-task-manager-server",
  "version": "1.0.0",
  "description": "Backend API server for Real-Time Collaborative Task Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "./start-dev.sh",
    "dev:simple": "pkill -f 'node.*server' || true && nodemon server.js",
