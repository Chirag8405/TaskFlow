{
  "name": "realtime-task-manager",
  "version": "1.0.0",
  "description": "Real-Time Collaborative Task Management System",
  "private": true,
  "scripts": {
    "dev": "./dev.sh",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "clean": "rm -rf node_modules server/node_modules client/node_modules",
    "clean:ports": "pkill -f 'node.*server' || true && pkill -f 'vite' || true && (lsof -ti:5000 | xargs kill -9 || true) && (lsof -ti:5173 | xargs kill -9 || true)",
    "logs:server": "tail -f server.log",
    "logs:client": "tail -f client.log",
    "logs": "tail -f server.log client.log"
  },
  "keywords": [
    "task-management",
    "real-time",
    "collaboration",
    "react",
    "nodejs",
    "mongodb",
    "socket.io"
  ],
  "author": "Chirag",
  "license": "MIT",
  "workspaces": [
    "client",
    "server"
  ]
}
